<!DOCTYPE html>
<html>
<head>
  <title>Trackr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="auth__links">
  <% if user_signed_in? %>
    <%= link_to 'Sign Out', destroy_user_session_path, :class => 'auth__link' %>
    <%= link_to 'Account', edit_user_registration_path, :class => 'auth__link' %>
  <% else %>
    <%= link_to "Log In", new_user_session_path, :class=>'info__text', :class => 'auth__link' %>
    <%= link_to "Sign Up", new_user_registration_path, :class=>'info__text', :class => 'auth__link' %>
  <% end %>
</div>

<div class="header">
  <div class="logo">
    <a href="/">
      <%= image_tag 'shield-outline.png', class:"logo__icn" %>
      <h1 class="logo__title">Trackr</h1>
    </a>
  </div>
  <div class="navigation"></div>
</div>

<%= yield %>

</body>
</html>
